<Page x:Class="Bifald.Database"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bifald"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1250"
      Title="Database">

    <Grid>
        <Button x:Name="backupButton" Content="Backup database" HorizontalAlignment="Left" Width="200" Margin="375,300,0,0" Height="50" FontSize="16" Click="backupButton_Click" VerticalAlignment="Top" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
        <Button x:Name="genskabButton" Content="Genskab database" Margin="0,300,375,0" Height="50" FontSize="16" Click="genskabButton_Click" HorizontalAlignment="Right" Width="200" VerticalAlignment="Top" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
    </Grid>
</Page>
